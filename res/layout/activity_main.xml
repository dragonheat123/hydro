<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ViewFlipper android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/patt_repeating">
            
            
         <!--  <WebView
		    android:id="@+id/wv"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" >
		</WebView>-->
 		<us.costan.chrome.ChromeView
		    android:id="@+id/wv"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" >
		</us.costan.chrome.ChromeView>
            
           	<ImageView
		    android:id="@+id/im1"
		    android:layout_width="10dp"
		    android:layout_height="10dp"
		    android:layout_gravity="center|right"
		    android:src="@drawable/arrow" />
           	
           	<LinearLayout
            android:orientation="horizontal"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="bottom|center">      	

  		<Button
		    android:id="@+id/g1"
		    android:layout_width="35dp"
		    android:layout_height="35dp"
		    android:background="@drawable/g11"
		    android:layout_gravity="left"
		    />
  		
  		<View
 		 android:layout_width="1dp"
  		android:layout_height="match_parent"
  		android:layout_weight="1">
		</View>
  		
  		
  		  		<Button
		    android:id="@+id/g2"
		    android:layout_width="35dp"
		    android:layout_height="35dp"
		    android:background="@drawable/g22"
		    />
  		  		
  		  <View
 		 android:layout_width="1dp"
  		android:layout_height="match_parent"
  		android:layout_weight="1">
		</View>
  		  		
  		  	<Button
		    android:id="@+id/g3"
		    android:layout_width="35dp"
		    android:layout_height="35dp"
		    android:background="@drawable/g33"
		    />
  		  	
  		  	<View
  android:layout_width="1dp"
  android:layout_height="match_parent"
  android:layout_weight="1">
</View>

		  		<Button
		    android:id="@+id/g4"
		    android:layout_gravity="right"
		    android:layout_width="35dp"
		    android:layout_height="35dp"
		    android:background="@drawable/g44"
	
		     />
		  	</LinearLayout>	



    <com.car.hydrogencar.JoystickView
        android:id="@+id/joystick1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="40dp" />

    <com.car.hydrogencar.JoystickView
        android:id="@+id/joystick2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="left|bottom" 
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp" />

    	<TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right" />
    	
    	<TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left" />


		<Button
		    android:id="@+id/button1"
		    android:layout_width="60dp"
		    android:layout_height="50dp"
		    android:layout_gravity="center"
		    android:background="@drawable/camera" />
	
		    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="top|center">  
            
		    <TextView
		    android:id="@+id/speedometer1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#838383"
		 android:textSize="50sp"
		    android:textStyle="bold"
		    />
		    
		      		  	<View
  android:layout_width="1dp"
  android:layout_height="match_parent"
  android:layout_weight="1">
</View>

		<TextView
		    android:id="@+id/speedometer"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#838383"
		   
		 android:textSize="20sp"
		    android:text="m/s"
		    android:textStyle="italic"
		    />
		



		</LinearLayout>
	
			<TextView
		    android:id="@+id/temp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#838383"
		 android:textSize="20sp"
		    android:text="50 deg"
		     android:layout_marginTop="20dp"
		    android:layout_marginRight="180dp"
		     android:layout_gravity="top|right"
		    android:textStyle="italic"
		    />
				
			<TextView
		    android:id="@+id/pressure"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#838383"
		 android:textSize="20sp"
		    android:text="30 psi"
		     android:layout_marginTop="20dp"
		    android:layout_marginLeft="180dp"
		     android:layout_gravity="top|left"
		    android:textStyle="italic"
		    />
			
			<TextView
		    android:id="@+id/fc"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#838383"
		 android:textSize="20sp"
		    android:text="Fuel Cell"
		   
		     android:layout_gravity="top|right"
		    android:textStyle="italic"
		    />
			<TextView
		    android:id="@+id/battery"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#838383"
		 android:textSize="20sp"
		    android:text="Battery"
		     android:layout_gravity="top|left"
		    android:textStyle="italic"
		    />
			<ProgressBar
			    android:id="@+id/progressBar1"
			    style="?android:attr/progressBarStyleSmall"
			    android:layout_width="25dp"
			    android:layout_gravity="top|left"
			    android:layout_marginTop="25dp"
			    android:layout_marginLeft="25dp"
			    android:layout_height="25dp" />
			
			
		<TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top" />

        </FrameLayout>

        <LinearLayout
               android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/patt_repeating">

<TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP Arduino:" />

    <EditText
        android:id="@+id/arduino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
		android:hint="192.168.0.105">
		
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP Camera:" 
        />

    <EditText
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
        android:hint="192.168.0.103"/>
    
           	<ImageView
		    android:id="@+id/im2"
		    android:layout_width="10dp"
		    android:layout_height="10dp"
		    android:layout_gravity="left"
		    android:layout_marginTop="72dp"
		    android:src="@drawable/arrow1" />
    
           	<Button
		    android:id="@+id/ok"
	
		    android:layout_gravity="bottom|right"
		    android:layout_marginRight="30dp"
		    android:layout_width="35dp"
		    android:layout_height="35dp"
		    android:layout_marginBottom="30dp"
		    android:background="@drawable/ok"
		    />
           	
           	
    
        </LinearLayout> 

    </ViewFlipper>

</LinearLayout>